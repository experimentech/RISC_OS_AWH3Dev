;Symbols for SWI's and SWI reason codes
RadioButton_SetLabel            *       &180
   ;Entry
   ;  R0 = flags (Bits)
   ;  R1 = window (Toolbox_O)
   ;  R2 = &180
   ;  R3 = radio_button (Toolbox_C)
   ;  R4 -> label (String)

RadioButton_GetLabel            *       &181
   ;Entry
   ;  R0 = flags (Bits)
   ;  R1 = window (Toolbox_O)
   ;  R2 = &181
   ;  R3 = radio_button (Toolbox_C)
   ;  R4 = buffer (pointer to String)
   ;  R5 = size (Int)
   ;Exit
   ;  R5 = used (Int)

RadioButton_SetAction           *       &182
   ;Entry
   ;  R0 = flags (Bits)
   ;  R1 = window (Toolbox_O)
   ;  R2 = &182
   ;  R3 = radio_button (Toolbox_C)
   ;  R4 = action (Bits)

RadioButton_GetAction           *       &183
   ;Entry
   ;  R0 = flags (Bits)
   ;  R1 = window (Toolbox_O)
   ;  R2 = &183
   ;  R3 = radio_button (Toolbox_C)
   ;Exit
   ;  R0 = action (Bits)

RadioButton_SetState            *       &184
   ;Entry
   ;  R0 = flags (Bits)
   ;  R1 = window (Toolbox_O)
   ;  R2 = &184
   ;  R3 = radio_button (Toolbox_C)
   ;  R4 = on (Bool)

RadioButton_GetState            *       &185
   ;Entry
   ;  R0 = flags (Bits)
   ;  R1 = window (Toolbox_O)
   ;  R2 = &185
   ;  R3 = radio_button (Toolbox_C)
   ;Exit
   ;  R0 = on (Bool)
   ;  R1 = on_button (Toolbox_C)

        ]
        END
